{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CTFever",
  "version": "0.1.0",
  "identifier": "app.c5r.ctfever",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm generate"
  },
  "app": {
    "windows": [
      {
        "title": "CTFever",
        "minWidth": 1038,
        "minHeight": 625,
        "width": 1038,
        "height": 625,
        "resizable": true,
        "dragDropEnabled": true,
        "decorations": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        {
          "host": "c5r.app"
        },
        {
          "host": "dev.c5r.app"
        },
        {
          "host": "ctfever.uniie.com"
        }
      ],
      "desktop": {
        "schemes": [
          "ctfever"
        ]
      }
    }
  }
}