{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CTFever",
  "version": "0.1.0",
  "identifier": "app.c5r.ctfever",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm generate"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CTFever",
        "minWidth": 1038,
        "minHeight": 625,
        "width": 1038,
        "height": 625,
        "resizable": true,
        "dragDropEnabled": true,
        "decorations": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        {
          "host": "c5r.app",
          "pathPrefix": [
            "/tools"
          ]
        },
        {
          "host": "dev.c5r.app",
          "pathPrefix": [
            "/tools"
          ]
        },
        {
          "host": "ctfever.uniiem.com",
          "pathPrefix": [
            "/tools"
          ]
        }
      ],
      "desktop": {
        "schemes": [
          "ctfever"
        ]
      }
    },
    "cli": {
      "description": "CTFever CLI",
      "args": [
        {
          "short": "v",
          "name": "verbose",
          "description": "Verbosity level"
        },
        {
          "name": "source",
          "index": 1,
          "takesValue": true
        },
        {
          "name": "destination",
          "index": 2,
          "takesValue": true
        }
      ],
      "subcommands": {
        "run": {
          "description": "Run the application",
          "args": [
            {
              "name": "debug",
              "description": "Run application in debug mode"
            },
            {
              "name": "release",
              "description": "Run application in release mode"
            }
          ]
        }
      }
    }
  }
}